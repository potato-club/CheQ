<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="dev.oth.cheq.viewModels.CommonSnackBarViewModel" />
        <variable
            name="common"
            type="dev.oth.cheq.CommonSnackBar" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2B353E"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            >

            <TextView
                android:id="@+id/tvPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/red_e55"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tvSample"
                android:layout_alignBottom="@id/tvSample"
                android:onClick="@{()->common.clickedByXmlPositive()}"
                android:text="@{vm.positiveMsg}"
                tools:text="OK"
                />

            <TextView
                android:id="@+id/tvNegative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/gray_a3"
                android:gravity="center_vertical"
                android:paddingHorizontal="5dp"
                android:layout_marginHorizontal="5dp"
                android:layout_toStartOf="@id/tvPositive"
                android:layout_alignTop="@id/tvSample"
                android:layout_alignBottom="@id/tvSample"
                android:onClick="@{()->common.clickedByXmlNegative()}"
                android:text="@{vm.negativeMsg}"
                android:visibility="@{vm.activeNegative ? View.VISIBLE : View.GONE}"
                tools:text="NO"
                />


            <TextView
                android:id="@+id/tvSample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginEnd="20dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tvNegative"
                android:layout_centerVertical="true"
                android:text="@{vm.message}"
                tools:text="Hello"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</layout>